<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cream"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Cats and tea"
        android:background="@color/milktea"
        android:textColor="@color/coffee"
        android:textSize="20sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Prenez une pause, avec une bonne tasse de thé, et regardez des images de chats mignons. Bien plus relaxant que la méditation."
        android:textColor="@color/coffee"
        android:textSize="15sp"
        android:padding="35sp"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <Button
             android:id="@+id/randomCatBut"
             android:layout_width="20sp"
             android:layout_height="20sp"
             android:text="To change"
             />
    </LinearLayout>
</LinearLayout>