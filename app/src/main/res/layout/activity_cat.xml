<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cream"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Cats and tea"
        android:background="@color/milktea"
        android:textColor="@color/coffee"
        android:textSize="20sp"
        android:gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/favcat"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:backgroundTint="@color/coffee"
        android:text="Favoris"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_margin="25sp" />
    <ImageView
        android:id="@+id/imageViewCat"
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:text="Cats and tea"

        android:textColor="@color/coffee"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        />
    <TextView
        android:id="@+id/textViewCatFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="2"
        android:textColor="@color/coffee"
        android:textSize="15sp"
        android:padding="35sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="50sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/heart"
            android:src="@drawable/redheart"
            android:layout_width="50sp"
            android:layout_height="50sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/randomCatBut"
            android:layout_width="125sp"
            android:layout_height="50sp"
            android:text="Nouveau chat"
            android:background="@color/coffee"
            android:backgroundTint="@color/coffee"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="50sp"
            android:layout_marginLeft="20sp"
            />

    </LinearLayout>
</LinearLayout>